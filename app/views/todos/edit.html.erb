<h1 class="text-center">Editar tarea</h1>

<div class='container mt-5'>
    <%= form_with(model: @todo, local: true) do |f| %>
    <div class= "form-group">
        <%= f.label :description %>
        <%= f.text_field :description, class:'form-control' %>
    </div>
    <div>
        <%= f.check_box :completed %><%= f.label :completed, 'Completado'%>
    <div>
    <div class="form group">
        <%= f.submit 'Crear'%>
        <%= link_to "Regresar", todos_path, class: 'btn btn-primary', style: 'float: right;'%>
    </div>
    <%end%>
</div>