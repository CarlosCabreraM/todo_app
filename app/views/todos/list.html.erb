<br>
<div class="fondo">
    <h1 class="text-center mt-5">Lista de tareas ordenada</h1>
</div>
<div class= "container">
    <div class="row">
        <h1 class="mt-4 font-weight-light">Tareas completadas</h1>
        <div class="row">
            <% @todos.each do |todo| %>
                <% if todo.completed %>
                    <div class="col-md-2 mr-2">
                        <div class="card mt-5", style="width: 120%;">
                            <div class="card-body">     
                                <h5 class="card-title text-center", style="color: green;">Tarea completada</h5>           
                                <p class="card-text text-center"><%=todo.description%></p>
                            </div>
                        </div>   
                    </div>
                <% end %>
            <% end %>
        </div>
        <h1 class="mt-4 font-weight-light">Tareas pendientes</h1>
        <div class="row">
            <% @todos.each do |todo| %>
                <% unless todo.completed %>
                    <div class="col-md-2 mr-2">
                        <div class="card mt-5 mb-4", style="width: 120%;">
                            <div class="card-body">     
                                <h5 class="card-title text-center", style="color: red;">Tarea pendiente</h5>           
                                <p class="card-text text-center"><%=todo.description%></p>
                            </div>
                        </div>   
                    </div>
                <% end %>
            <% end %>
        </div>
    </div>
</div>