<br>
<h1 class="text-center mt-5">Tu registro de tareas</h1>
<div class="container">
    <% @todos.each_slice(3) do |todos|%>
        <div class= "row">
            <% todos.each do |todo| %>
                <div class= "'text-center col-md-4 mx-auto my-3'">
                    <div class="card mt-5" style="width: 18rem;">
                        <div class="card-body">
                            <% if todo.completed %>
                                <h5 class="card-title text-center", style="color: green;">Tarea completada</h5>
                            <% else %>
                                <h5 class="card-title text-center", style="color: red;">Tarea pendiente</h5>
                            <% end %>
                            <p class="card-text text-center"><%=todo.description%></p>
                            <div class="text-center">
                             <%= button_to  "Marcar como completada", complete_todo_path(todo), class: 'btn btn-primary' %>
                            </div>
                            <div class="text-center mt-4">
                                <%= link_to "Ver", todo, class:'btn btn-outline-secondary btn-sm' %>
                                <%= link_to "Editar", edit_todo_path(todo), class:'btn btn-outline-secondary btn-sm' %>
                                <%= link_to  "Borrar",todo, method: :delete, class:'btn btn-outline-secondary btn-sm' %>
                            </div>
                        </div>
                    </div>
                </div>
            <% end %>
        </div>
    <% end %>
</div>

<div class="text-center mt-5">
    <%= link_to  "Crear tarea", todos_new_path, class: 'btn btn-success' %>
</div>
